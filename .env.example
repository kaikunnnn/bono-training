# Supabase設定
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
VITE_SUPABASE_URL=https://your-project.supabase.co

# サイトURL（本番環境では実際のURLに変更してください）
VITE_SITE_URL=http://localhost:8080

# Sanity Configuration
VITE_SANITY_PROJECT_ID=your-sanity-project-id
VITE_SANITY_DATASET=production
VITE_SANITY_API_VERSION=2024-01-01

# Sanity Configuration for Edge Functions (Vercel)
# Note: VITE_ prefix variables are for client-side, these are for server-side Edge Functions
SANITY_PROJECT_ID=your-sanity-project-id
SANITY_DATASET=production

# Site URL for OGP (used by Edge Functions)
SITE_URL=https://app.bo-no.design

# Webflow Configuration
# ⚠️ IMPORTANT: WEBFLOW_API_TOKEN is used in Edge Functions (server-side only)
# Get your token from: https://webflow.com/dashboard → Account Settings → Apps & Integrations → API Access
WEBFLOW_API_TOKEN=wf_your_api_token_here

# Webflow Collection IDs (client-side safe)
VITE_WEBFLOW_VIDEOS_COLLECTION_ID=6029d027f6cb8852cbce8c75
VITE_WEBFLOW_SERIES_COLLECTION_ID=your-series-collection-id
VITE_WEBFLOW_TEST_SERIES_ID=684a8fd0ff2a7184d2108210

# Blog / Ghost CMS設定
VITE_BLOG_DATA_SOURCE=ghost
VITE_GHOST_URL=http://localhost:2368
VITE_GHOST_KEY=your_ghost_content_api_key_here
